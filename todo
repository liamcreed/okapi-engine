Post processing:
    Chromatic abberation
    vec3 col;
    float amount = 0.001;
    col.r = texture( u_texture, vec2(v_uv.x+amount,v_uv.y)).r;
    col.g = texture( u_texture, v_uv).g;
    col.b = texture( u_texture, vec2(v_uv.x-amount,v_uv.y)).b;

	col *= (1.0 - amount * 0.5);
    
    f_color = vec4(col, 1.0f);
